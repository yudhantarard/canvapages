    <script>
        const moduleData = {
            analytics: {
                title: "Cost Analytics",
                detail: "Identify price gaps, contract inefficiencies, and unmanaged spend through independent market validation.",
                data: [100, 84]
            },
            inventory: {
                title: "Inventory & S&OP",
                detail: "Align demand, replenishment, and working capital to secure availability without excess stock.",
                data: [100, 72]
            },
            logistics: {
                title: "Logistics Performance",
                detail: "Evaluate courier cost, SLA compliance, and network efficiency to improve service and predictability.",
                data: [100, 88]
            },
            sourcing: {
                title: "Targeted Strategic Sourcing",
                detail: "Run focused tenders and negotiations for selected categories to strengthen terms and supplier performance.",
                data: [100, 82]
            }
        };

        let activeChart;

        function initChart() {
            const ctx = document.getElementById('moduleChart').getContext('2d');
            activeChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Current', 'Optimized'],
                    datasets: [{
                        data: [100, 84],
                        backgroundColor: ['#262626', '#ffffff'],
                        borderRadius: 2,
                        barThickness: 60
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { grid: { display: false }, ticks: { color: '#525252', font: { size: 10, weight: 'bold' } } },
                        y: { display: false, beginAtZero: true, max: 120 }
                    }
                }
            });
        }

        function updateModule(id) {
            const module = moduleData[id];
            document.getElementById('moduleTitle').innerText = module.title;
            document.getElementById('moduleDetail').innerText = module.detail;
            
            activeChart.data.datasets[0].data = module.data;
            activeChart.update();

            document.querySelectorAll('.module-card').forEach(c => c.classList.remove('active'));
            document.getElementById(`card-${id}`).classList.add('active');
        }

        window.onload = () => {
            initChart();
            updateModule('analytics');
        };
    </script>
</body>
